@model Tazkara.ViewModels.MatchViewModel

@{
    ViewData["Title"] = "Create";
    SelectList Stadiums = new SelectList(ViewBag.Stadiums, "Id", "Name");
    SelectList Teams = new SelectList(ViewBag.Teams, "Id", "Name");
    SelectList Leagues = new SelectList(ViewBag.Leagues, "Id", "Name");
}

<h1>Create Match</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Match Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LeagueId" class="control-label">League</label>
                <select asp-items="Leagues" asp-for="LeagueId" class="form-control"></select>
                <span asp-validation-for="LeagueId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StadiumId" class="control-label">Stadium</label>
                <select asp-items="Stadiums" asp-for="StadiumId" class="form-control"></select>
                <span asp-validation-for="StadiumId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamA" class="control-label">Team 1</label>
                <select asp-items="Teams" asp-for="TeamA" class="form-control"></select>
                <span asp-validation-for="TeamA" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamB" class="control-label">Team 2</label>
                <select asp-items="Teams" asp-for="TeamB" class="form-control"></select>
                <span asp-validation-for="TeamB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
